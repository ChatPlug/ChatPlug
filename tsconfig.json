{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "target": "es2018",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "es2016"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/migration/**",
    "src/services/dashboard/web/**",
    "src/services/slack/**" // TODO: remove when slack is fixed
  ]
}
