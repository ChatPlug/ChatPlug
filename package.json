{
  "name": "facegram",
  "version": "1.0.0",
  "description": "A simple and extensible facebook-telegram bridge",
  "main": "/dist/index",
  "typings": "/src/types/index.d.ts",
  "scripts": {
    "start": "npm run serve",
    "dev": "npm run build && NODE_ENV=development npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/index.js",
    "test": "jest --forceExit --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feelfreelinux/facegram.git"
  },
  "keywords": [
    "facebook",
    "telegram",
    "facebook-api",
    "telegram-api",
    "chat",
    "bridge"
  ],
  "author": "feelfreelinux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/feelfreelinux/facegram/issues"
  },
  "homepage": "https://github.com/feelfreelinux/facegram#readme",
  "dependencies": {
    "@types/node-telegram-bot-api": "^0.30.1",
    "discord.js": "^11.3.2",
    "facebook-chat-api": "^1.6.0",
    "node-telegram-bot-api": "^0.30.0",
    "npmlog": "^4.1.2",
    "rxjs": "^6.2.1",
    "telegram-mtproto": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "@types/npmlog": "^4.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
